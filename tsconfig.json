{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "esnext"],
    "outDir": "build",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "baseUrl": "./",
    "paths": {
      "~/*": ["*"]
    }
  }
}
